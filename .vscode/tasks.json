{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "windows": {
        "command": "PCBuild/build.bat",
        "args": ["-p", "x64", "-c", "Debug"]
      },
      "linux": {
        "command": "make -j4 -s"
      },
      "osx": {
        "command": "make -j2 -s"
      }
    }
  ]
}
